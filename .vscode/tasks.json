{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compile a file with main()",
            "command": "/usr/local/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/${relativeFileDirname}/${fileBasenameNoExtension}.cpp",
                "-o",
                "${workspaceFolder}/build/${fileDirnameBasename}/${fileBasenameNoExtension}",
                "-I",
                "/usr/local/include",
                "-I",
                "${workspaceFolder}/llhttp/build",
                "-L",
                "${workspaceFolder}/llhttp/build",
                "-l",
                "llhttp",
                "-L",
                "/usr/local/lib",
                "-l",
                "ssl",
                "-l",
                "crypto",
                "-l",
                "uv"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}